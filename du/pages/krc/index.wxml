<!--pages/krc/index.wxml-->
<view class="poetry-input-body columnbox" wx:if="{{scene == 'input'}}">

  <view class="columnbox-header title">
    请按示范输入将领读的诗词：
  </view>

  <view class="columnbox-body textarea-wrap">
    <textarea bindblur="textareaChange" bindconfirm="textareaChange" auto-focus="true" placeholder="{{samplePoetry}}" value="{{samplePoetry}}" name="poetry"></textarea>
  </view>

  <view class="columnbox-footer buttons">
    <button bindtap="enterRecordFollowScene">领读录制</button>
  </view>

</view>

<view class="poetry-input-body columnbox"  wx:if="{{scene == 'recordFollow' || scene=='recordRead'}}">

  <view class="columnbox-body poetry-body" bindtap="startRecord">
    <view class="text {{begin.css}}">
      <block wx:for="{{begin.term}}" wx:for-item="w">
        <view class="{{w[3]}}" wx:if="{{w[1]!=''}}">
          <text wx:if="{{w[2]!=''}}" class="pinyin gres_{{wcss[w[0]]}}">{{w[2]}}</text>
          <text class="hanz gres_{{wcss[w[0]]}}">{{w[1]}}</text>
        </view>
      </block>
    </view>

    <block wx:for="{{wordLines}}" wx:for-item="line">
      <view class="text {{line.css}}">
        <block wx:for="{{line.term}}" wx:for-item="w">
          <view class="{{w[3]}}" wx:if="{{w[1]!=''}}">
            <text wx:if="{{w[2]!=''}}" class="pinyin gres_{{wcss[w[0]]}}">{{w[2]}}</text>
            <text class="hanz gres_{{wcss[w[0]]}}">{{w[1]}}</text>
          </view>
        </block>
      </view>
    </block>

  </view>

  <view class="columnbox-footer record-buttons">
    <button bindtap="enterInputScene">诗词内容</button>
    <button bindtap="startRecordFollow">
    <image class="record-button" src="{{record_follow_icon}}"></image>
    跟读录制</button>
    <button bindtap="startRecord">
    <image class="record-button" src="{{record_icon}}"></image>
    领读录制</button>
  </view>
</view>
